<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/title"
        android:gravity="center"
        android:textColor="#A39D9D"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/cosmicImage"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/image_view"/>

            <TextView
                android:id="@+id/author"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:contentDescription="@string/copyright_view"
                android:textColor="#38362D"
                android:gravity="end"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"/>


            <TextView
                android:id="@+id/descriptionView"
                android:contentDescription="@string/description_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#9C9797"/>

            <TextView
                android:id="@+id/dateView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/date_view"
                android:gravity="right"
                android:textColor="#43575B"
                android:textStyle="bold" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>